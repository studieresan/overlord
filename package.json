{
  "name": "Overlord",
  "version": "0.1.0",
  "description": "Studs20 backend",
  "repository": {
    "type": "git",
    "url": "https://github.com/studieresan/overlord"
  },
  "author": "Studieresan",
  "license": "MIT",
  "scripts": {
    "start": "npm run build && npm run watch",
    "build": "npm run build-ts && npm run tslint",
    "postinstall": "npm run build",
    "serve": "nodemon dist/server.js --delay 0.1",
    "serve-prod": "node dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,blue.bold\" \"npm run watch-ts\" \"npm run serve\"",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,blue.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "deploy": "gcloud app deploy"
  },
  "jest": {
    "globals": {
      "__TS_CONFIG__": "tsconfig.json"
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/test/**/*.test.(ts|js)"
    ],
    "testEnvironment": "node"
  },
  "dependencies": {
    "@sendgrid/mail": "^6.1.4",
    "@sentry/node": "4.2.3",
    "@sentry/types": "^4.2.3",
    "@types/async": "^3.2.5",
    "@types/bcrypt-nodejs": "0.0.30",
    "@types/body-parser": "^1.19.0",
    "@types/compression": "1.7.0",
    "@types/connect": "^3.4.34",
    "@types/dotenv": "^2.0.20",
    "@types/errorhandler": "0.0.30",
    "@types/express": "^4.0.35",
    "@types/express-graphql": "^0.0.34",
    "@types/graphql": "^0.11.5",
    "@types/mongoose": "^4.7.9",
    "@types/morgan": "^1.9.2",
    "@types/node": "^14.14.14",
    "@types/passport": "^0.3.3",
    "@types/passport-jwt": "^3.0.1",
    "@types/passport-local": "^1.0.33",
    "async": "^3.2.0",
    "aws-sdk": "^2.814.0",
    "bcrypt-nodejs": "^0.0.3",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "connect": "^3.7.0",
    "dotenv": "^2.0.0",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "express-graphql": "^0.6.11",
    "express-validator": "^3.1.3",
    "graphiql": "^0.11.5",
    "graphql": "^0.11.7",
    "jsonwebtoken": "^8.5.1",
    "lusca": "^1.6.1",
    "mongoose": "^5.7.5",
    "morgan": "^1.10.0",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0"
  },
  "false": {},
  "devDependencies": {
    "concurrently": "^5.3.0",
    "nodemon": "^2.0.6",
    "tslint": "^6.1.3",
    "typescript": "^4.1.3"
  }
}
